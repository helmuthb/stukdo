<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :content, as: :string, label: false, required: true, placeholder: "Content", autofocus: true, input_html: {class: "form-control"} %>
  <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
<% end %>
